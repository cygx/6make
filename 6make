#!/usr/bin/env perl6

my $ECOSYSTEM :=
    'https://raw.githubusercontent.com/perl6/ecosystem/master/META.list';

proto MAIN(|) {
    {*}
    EVALFILE $?FILE ~ '-' ~ @*ARGS.shift;
}

multi MAIN('scan') {}
multi MAIN('add', *@META-URL) {}
multi MAIN('add-list', $LIST-URL) {}
multi MAIN('add-ecosystem') { @*ARGS = <<add-list "$ECOSYSTEM">> }
